    <bpmn:scriptTask id="Activity_0tryrtf" name="Generate Email Payload" scriptFormat="groovy">
      <bpmn:incoming>Flow_17xtjse</bpmn:incoming>
      <bpmn:outgoing>Flow_0ga72ox</bpmn:outgoing>
      <bpmn:script>import org.camunda.spin.Spin
import groovy.json.JsonSlurper
import groovy.json.JsonOutput

// Get JSON string from execution variable
var formData = S(execution.getVariable("formData"));

// Remove the `currentUserRole` field
formData.deleteProp("currentUserRole");

def applicationId = execution.getVariable("applicationId");

// Add or update a property in formData
formData.prop("ff_application_id", applicationId);

// Read environment variable
def system = java.lang.System
def icbcEmail = system.getenv('ICBC_OPS_EMAIL')

// Build print_options dynamically using Spin
def printOptions = Spin.JSON('''{
  "type": "icbc",
  "email": "",
  "is_draft": false
}''')

// Inject dynamic email value
printOptions.prop("email", icbcEmail)

formData.prop("print_options", printOptions)


// Build the nested payload as a Spin JSON object
def payload = Spin.JSON('''{
    "template": "mv6020.html",
    "data": {},
    "options": {
        "type": "email",
        "filename": ""
    }
}''')

// Set the dynamic values
payload.prop("data", formData)

// Extract collision case number as plain string
def collisionCaseNum = formData.prop("collision_case_num")?.stringValue()

// Fallback if null
if (!collisionCaseNum) {
    collisionCaseNum = "unknown"
}
payload.prop("options").prop("filename", "MV6020_${collisionCaseNum}.pdf")


execution.setVariable("payload", payload.toString())

</bpmn:script>
